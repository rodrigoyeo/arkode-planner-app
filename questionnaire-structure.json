{
  "metadata": {
    "version": "2.0.0",
    "description": "Redesigned questionnaire with improved UX",
    "estimated_completion_time": "10-15 minutes"
  },

  "sections": [
    {
      "id": "project_basics",
      "title": "Project Information",
      "description": "Basic details about your project",
      "questions": [
        {
          "id": "project_name",
          "question": "Project Name",
          "type": "text",
          "required": true,
          "placeholder": "e.g., EAS Systems - Odoo Implementation 2025"
        },
        {
          "id": "client_name",
          "question": "Client Company Name",
          "type": "text",
          "required": true,
          "placeholder": "e.g., EAS Systems"
        },
        {
          "id": "industry",
          "question": "Industry",
          "type": "select",
          "required": false,
          "options": [
            "Manufacturing",
            "Distribution/Wholesale",
            "Retail/E-commerce",
            "Professional Services",
            "Field Services",
            "Construction",
            "Healthcare",
            "Technology/Software",
            "Other"
          ]
        },
        {
          "id": "country",
          "question": "Country",
          "type": "text",
          "required": false,
          "placeholder": "e.g., Mexico"
        },
        {
          "id": "language",
          "question": "Plan Language",
          "type": "select",
          "required": true,
          "default": "English",
          "options": ["English", "Spanish"]
        },
        {
          "id": "project_manager",
          "question": "Arkode Project Manager",
          "type": "text",
          "required": false,
          "placeholder": "e.g., Luis Muñoz"
        },
        {
          "id": "project_start_date",
          "question": "Project Start Date",
          "type": "date",
          "required": false
        },
        {
          "id": "project_duration_weeks",
          "question": "Estimated Project Duration (weeks)",
          "type": "number",
          "required": false,
          "min": 1,
          "max": 52,
          "placeholder": "e.g., 16",
          "help_text": "How many weeks do you have to complete the project?"
        },
        {
          "id": "project_deadline",
          "question": "Project Deadline (Optional)",
          "type": "date",
          "required": false,
          "help_text": "If you have a hard deadline, specify it here"
        },
        {
          "id": "enable_ai_customization",
          "question": "Use AI to customize tasks based on your requirements?",
          "type": "checkbox",
          "required": false,
          "default": true,
          "help_text": "Recommended: AI generates specific tasks based on your answers"
        }
      ]
    },

    {
      "id": "scope_and_hours",
      "title": "Scope & Hours",
      "description": "Which phases and how many hours were quoted?",
      "questions": [
        {
          "id": "clarity_phase",
          "question": "Clarity Phase (Discovery & Requirements)",
          "type": "checkbox",
          "default": true,
          "help_text": "Process mapping, gap analysis, Master of Implementation"
        },
        {
          "id": "clarity_hours",
          "question": "→ Clarity Phase Hours",
          "type": "number",
          "required": false,
          "conditional": "clarity_phase === true",
          "min": 0,
          "placeholder": "e.g., 65",
          "help_text": "Total hours for discovery and requirements"
        },
        {
          "id": "implementation_phase",
          "question": "Implementation Phase (Configuration & Setup)",
          "type": "checkbox",
          "default": true,
          "help_text": "Odoo configuration, data migration, customization"
        },
        {
          "id": "implementation_hours",
          "question": "→ Implementation Phase Hours",
          "type": "number",
          "required": false,
          "conditional": "implementation_phase === true",
          "min": 0,
          "placeholder": "e.g., 165",
          "help_text": "Total hours for implementation"
        },
        {
          "id": "modules",
          "question": "→ Modules to Implement",
          "type": "multiselect",
          "required": false,
          "conditional": "implementation_phase === true",
          "options": [
            {"value": "CRM", "label": "CRM", "description": "Lead & opportunity management", "popular": true},
            {"value": "Sales", "label": "Sales", "description": "Quotations and sales orders", "popular": true},
            {"value": "Purchase", "label": "Purchase", "description": "Purchase orders and vendor management", "popular": true},
            {"value": "Inventory", "label": "Inventory", "description": "Warehouse and stock management", "popular": true},
            {"value": "Accounting", "label": "Accounting", "description": "Financial accounting", "popular": true},
            {"value": "Projects", "label": "Projects", "description": "Project management and timesheets", "popular": true},
            {"value": "FSM", "label": "Field Service", "description": "Field service management", "popular": true},
            {"value": "Expenses", "label": "Expenses", "description": "Employee expense management", "popular": true},
            {"value": "Manufacturing", "label": "Manufacturing", "description": "MRP and production management"},
            {"value": "eCommerce", "label": "eCommerce", "description": "Online store"},
            {"value": "POS", "label": "Point of Sale", "description": "Retail POS system"},
            {"value": "HR", "label": "HR", "description": "Human resources"},
            {"value": "Payroll", "label": "Payroll", "description": "Payroll processing"},
            {"value": "Helpdesk", "label": "Helpdesk", "description": "Customer support tickets"}
          ],
          "show_more_threshold": 8
        },
        {
          "id": "adoption_phase",
          "question": "Adoption Phase (Training & Support)",
          "type": "checkbox",
          "default": true,
          "help_text": "User training, go-live support, post-launch support"
        },
        {
          "id": "adoption_hours",
          "question": "→ Adoption Phase Hours",
          "type": "number",
          "required": false,
          "conditional": "adoption_phase === true",
          "min": 0,
          "placeholder": "e.g., 40",
          "help_text": "Total hours for training and support"
        },
        {
          "id": "adoption_duration_months",
          "question": "→ Support Duration (months)",
          "type": "number",
          "required": false,
          "conditional": "adoption_phase === true",
          "min": 1,
          "default": 2,
          "placeholder": "e.g., 2",
          "help_text": "How many months of post-launch support"
        },
        {
          "id": "custom_modules_visual",
          "question": "Custom Modules",
          "type": "custom_modules",
          "required": false,
          "conditional": "implementation_phase === true"
        },
        {
          "id": "data_migration",
          "question": "Data migration required?",
          "type": "select",
          "required": false,
          "conditional": "implementation_phase === true",
          "options": ["No", "Partial", "Full"],
          "default": "No"
        },
        {
          "id": "migration_hours",
          "question": "→ Data Migration Hours",
          "type": "number",
          "required": false,
          "conditional": "data_migration !== 'No'",
          "min": 0,
          "placeholder": "e.g., 40",
          "help_text": "Hours for migrating data from legacy systems"
        }
      ]
    },

    {
      "id": "clarity_details",
      "title": "Discovery & Requirements",
      "description": "Details for the Clarity phase",
      "conditional": "clarity_phase === true",
      "questions": [
        {
          "id": "current_systems",
          "question": "Current Systems/Tools",
          "type": "textarea",
          "required": false,
          "placeholder": "e.g., QuickBooks, Excel, Google Workspace, ASPEL (SAE / COI)",
          "help_text": "List current software and tools"
        },
        {
          "id": "pain_points",
          "question": "Main Pain Points or Challenges",
          "type": "textarea",
          "required": false,
          "placeholder": "e.g., Manual processes, no inventory visibility, disconnected systems",
          "help_text": "Problems to solve with Odoo"
        },
        {
          "id": "core_processes",
          "question": "Core Business Processes",
          "type": "textarea",
          "required": false,
          "placeholder": "e.g., Quote-to-Cash, Procure-to-Pay, Make-to-Order production",
          "help_text": "Key business processes to map"
        },
        {
          "id": "workshop_count",
          "question": "Number of Discovery Workshops",
          "type": "number",
          "required": false,
          "min": 1,
          "default": 4,
          "placeholder": "4"
        }
      ]
    },

    {
      "id": "implementation_details",
      "title": "Technical Implementation Details",
      "description": "Additional implementation requirements",
      "conditional": "implementation_phase === true",
      "questions": [
        {
          "id": "data_migration_scope",
          "question": "What data needs to be migrated?",
          "type": "textarea",
          "required": false,
          "conditional": "data_migration !== 'No'",
          "placeholder": "e.g., Customers, vendors, products, 5 years of financial data from ASPEL",
          "help_text": "Describe what data to migrate from legacy systems"
        },
        {
          "id": "integrations",
          "question": "Third-party integrations needed?",
          "type": "select",
          "required": false,
          "options": ["No", "Yes"],
          "default": "No"
        },
        {
          "id": "integration_list",
          "question": "→ List integrations",
          "type": "textarea",
          "required": false,
          "conditional": "integrations === 'Yes'",
          "placeholder": "e.g., Shopify, Stripe, FedEx shipping",
          "help_text": "Third-party systems to integrate with Odoo"
        },
        {
          "id": "customization_scope",
          "question": "Describe custom module requirements",
          "type": "textarea",
          "required": false,
          "conditional": "custom_modules_count >= 1",
          "placeholder": "Detailed description of custom modules:\n\nI+D Module:\n- Database structure for SKU, manufacturer, specs\n- Fields for frequency, range, resolution, protocol\n- Provider linking with pricing and lead time\n- R&D process stages\n- Integration with purchasing\n- Analysis dashboard",
          "help_text": "Detailed requirements for each custom module",
          "rows": 8
        },
        {
          "id": "multi_company",
          "question": "Multi-company setup?",
          "type": "select",
          "required": false,
          "options": ["No", "Yes"],
          "default": "No"
        },
        {
          "id": "company_count",
          "question": "→ Number of companies",
          "type": "number",
          "required": false,
          "conditional": "multi_company === 'Yes'",
          "min": 2,
          "placeholder": "2"
        },
        {
          "id": "multi_warehouse",
          "question": "Multiple warehouses?",
          "type": "select",
          "required": false,
          "options": ["No", "Yes"],
          "default": "No"
        },
        {
          "id": "warehouse_count",
          "question": "→ Number of warehouses",
          "type": "number",
          "required": false,
          "conditional": "multi_warehouse === 'Yes'",
          "min": 2,
          "placeholder": "3"
        }
      ]
    },

    {
      "id": "adoption_details",
      "title": "Training & Support",
      "description": "User adoption and go-live details",
      "conditional": "adoption_phase === true",
      "questions": [
        {
          "id": "user_count",
          "question": "Total number of users",
          "type": "number",
          "required": false,
          "min": 1,
          "placeholder": "e.g., 20",
          "help_text": "How many people will use Odoo"
        },
        {
          "id": "user_breakdown",
          "question": "User breakdown by role/department",
          "type": "textarea",
          "required": false,
          "placeholder": "e.g., Ventas (5), Operaciones (5), Servicios (3), Admin (2)",
          "help_text": "Helps create role-based training"
        },
        {
          "id": "training_format",
          "question": "Preferred training format",
          "type": "select",
          "required": false,
          "options": ["On-site", "Remote", "Hybrid"],
          "default": "Hybrid"
        },
        {
          "id": "golive_support_days",
          "question": "Intensive go-live support days",
          "type": "number",
          "required": false,
          "min": 1,
          "default": 4,
          "placeholder": "4",
          "help_text": "Days of intensive on-site/remote support during launch"
        }
      ]
    }
  ]
}
